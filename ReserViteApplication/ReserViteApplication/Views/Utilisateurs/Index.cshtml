@model IEnumerable<ReserViteApplication.Models.Utilisateur>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestion des utilisateurs</h1>

<p>
    <a asp-action="Create">Créer utilisateur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotDePasse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotDePasse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstAdmin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UtilisateurId">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.UtilisateurId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UtilisateurId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a href="~/Admins/Index">Retourner dans la page principale</a>
</div>
