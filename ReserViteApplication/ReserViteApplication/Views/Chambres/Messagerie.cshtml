@{
    ViewData["Title"] = "Messagerie";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <div class="messagerie-container position-fixed bottom-0 end-0 mb-3 me-3">
        <div class="card shadow-lg" style="width: 300px;">
            <!-- En-tête de la messagerie -->
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Messagerie</h6>
                <button type="button" class="btn-close btn-close-white" aria-label="Fermer"></button>
            </div>

            <!-- Zone de messages -->
            <div class="card-body" style="height: 300px; overflow-y: auto;">
                
                <div class="message mb-2">
                    <strong>Nom d'utilisateur:</strong> Contenu
                </div>
                
                <p class="text-muted">Aucun message pour le moment.</p>
            </div>

            <!-- Zone de saisie du message -->
            <div class="card-footer">
                <form asp-action="EnvoyerMessage" method="post" class="d-flex">
                    <input type="text" name="contenuMessage" class="form-control me-2" placeholder="Écrire un message..." required>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
